- var strong = ['Тип SIM-карты','Количество SIM-карт','Цвет','ОC','Связь 3G','4G (LTE)','GPS-модуль'];
- var span = ['Micro-SIM','2','Белый','есть','нет','нет','нет'];
- var price = ['11 290','10 990','9 900','8 990','5 390','4 990','3 990','3 290','1 790'];

div(class="product product__view-#{num}")
  ul(class="product__list")
    each item, val in artical
      li(class="product__item") 
        //- ===== 
        ul.inner__product_list
          //- =====  Photo block
          li.inner__product_item.inner__product_img
            //- =====  большая картинка продукта
            .img__big
              img(src="/img/shop-assets/#{val + 1}.png", alt="")
            //- =====  маленькие картинки продукции
            ul.img__small_list
              li.img__small_item
                img(src="/img/shop-assets/#{val + 1}_1.png", alt="")
              li.img__small_item
                img(src="/img/shop-assets/#{val + 1}_2.png", alt="")
              li.img__small_item
                img(src="/img/shop-assets/#{val + 1}_3.png", alt="")
            //- ===== Артикль продукта
            div(class="artical")
              strong Артикул
              span= item
          li.inner__product_item.inner__product_about
            //- ===== Название продукта
            .about_title= title[val]
            //- =====  Описание продукта #1 of 2
            ul(class="description__list description-1")
              li.description__item= desc[val]
            //- =====  Описание продукта #2 of 2
            ul(class="description__list description-2").clearfix
              -for(var i = 0; i < 7; i++)
                li(class="description__item " + ( (i % 2) ? 'white' : 'grey'))
                  strong= strong[i]
                  span= span[i]
              
                  
            //- Райтинг
            div.rating
                - var result = 4;
                ul.rating__list
                  - for(var i = 1; i <= 5; i++)
                    li(class="rating__item rating__star-" + ((i<=result) ? 'red' : 'grey'))= i
                div.rating__result= result

          //- цена тавара и кнопка заказа
          li.inner__product_item.inner__product_price
            .price.clearfix
              .cost= price[val]
                span.rubl a
              .col-avelibility
                .status В наличии
              button В корзину